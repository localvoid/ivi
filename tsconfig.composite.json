{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "removeComments": false,

    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  }
}
