{
  "private": true,
  "workspaces": [
    "tests",
    "packages/@ivi/*",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b -w --pretty",
    "build:force": "tsc -b --force --pretty",
    "test": "node --enable-source-maps --test",
    "test:only": "node --enable-source-maps --test-only --test packages/**/*.test.js tests/dist/**/*.test.js"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  }
}